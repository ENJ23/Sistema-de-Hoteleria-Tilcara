# Configuración del Servidor
NODE_ENV=production
PORT=3000

# Configuración de Zona Horaria
TZ=America/Argentina/Buenos_Aires

# Base de Datos MongoDB
MONGODB_URI=mongodb://localhost:27017/hoteleria
# Para MongoDB Atlas (producción):
# MONGODB_URI=mongodb+srv://usuario:password@cluster.mongodb.net/hoteleria?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=tu-jwt-secret-super-seguro-aqui
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Frontend URL (para CORS)
FRONTEND_URL=https://tu-dominio-frontend.com

# Configuración de Seguridad
SESSION_SECRET=tu-session-secret-super-seguro-aqui

# Configuración de Email (opcional para notificaciones)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=tu-email@gmail.com
EMAIL_PASS=tu-password-de-aplicacion

# Configuración de Logs
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Configuración de Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Diario a las 2 AM
BACKUP_RETENTION_DAYS=30
