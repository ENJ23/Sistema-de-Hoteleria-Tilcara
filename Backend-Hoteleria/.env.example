# Configuración del servidor
PORT=3000
NODE_ENV=development

# Configuración de MongoDB
MONGODB_URI=mongodb://localhost:27017/hoteleria

# Configuración de autenticación JWT
JWT_SECRET=tu_clave_secreta_jwt_muy_segura
JWT_EXPIRES_IN=24h

# Configuración de CORS (opcional, el backend ya tiene una configuración por defecto)
FRONTEND_URL=http://localhost:4200

# Configuración de correo electrónico (para futuras implementaciones)
# SMTP_HOST=smtp.tuservidorcorreo.com
# SMTP_PORT=587
# SMTP_USER=tu_usuario
# SMTP_PASS=tu_contraseña
# EMAIL_FROM=noreply@hoteleria.com

# Configuraciones adicionales
TIMEZONE=America/Argentina/Buenos_Aires

# Configuración de logs
LOG_LEVEL=info
